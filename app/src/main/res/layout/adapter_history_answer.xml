<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/empty_outline"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="2017/8/16"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/fontSize_14sp" />

    <TextView
        android:id="@+id/tv_ask_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="你最喜欢什么星座"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/fontSize_16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="观看回答"
            android:textColor="@color/color_FB9938"
            android:textSize="@dimen/fontSize_14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="观看提问"
            android:textColor="@color/color_FB9938"
            android:textSize="@dimen/fontSize_14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:drawableLeft="@drawable/had_view"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/had_view"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/fontSize_14sp" />

    </LinearLayout>
</LinearLayout>